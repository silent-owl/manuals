<div id="?page=<%=step.count%>">
	<div class="col-sm-10 col-md-10 col-sm-offset-1 col-md-offset-1">
	    <h3 style="text-align: left;"><%= step.count.to_s + " " + step.title %></h3>
	    <hr>
	    <p><%= step.description*15 %></p>
	    <hr>
	    <div class="step-img" style="max-height: 500px; margin-bottom: 5px;">
	        <%= link_to image_tag step.img_url, class: 'img-responsive single-step-img ', :alt => "ManualImage" %>
	    </div>
	</div>	
</div>
