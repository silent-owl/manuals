<div class="container">
    <div class="row" style="margin-bottom: 10px;">
        <div class="col-sm-7">
            <%= render 'pages/index/search_form' %>    
        </div>
        <div class="col-sm-5">
            <%= render create_new_manual_partial_path %>
        </div>
    </div>
    
	<div class="row">
		<div class="col-sm-3" id="side-menu">
			<ul id="links-list" style="padding-left: 5px;">
                <%= render all_categories_button_partial_path %>
                <hr>
    			<%= render 'pages/index/side_menu/categories' %>
  			</ul>	
		</div>
		<div class="col-sm-9" id="main-content">
			<%= render @manuals %>	
            <%= render no_manuals_partial_path %>
		</div>
	</div>
    <div class="row">
         <div class="infinite-scroll">
            <%= will_paginate @manuals %>
        </div>
    </div>
</div>



<script type="text/javascript" src="assets/pages/index.js"></script>