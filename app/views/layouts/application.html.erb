<!DOCTYPE html>
<html>
  <head>
    <title>Manuall</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">  
  </head>

  <body>
    <%= render 'layouts/nav'%>
    <%= render 'layouts/messages'%>

    <%= yield %>
    
    <script>
      window.setTimeout(function() {
        $(".alert").fadeTo(500, 0).slideUp(500, function(){
          (this).remove();
        });
      }, 4000);
    </script>

    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"> </script>
    
    <script type="text/javascript">  
      $('#upload-widget-opener').cloudinary_upload_widget({ 
        cloud_name: 'silent-owl',
        multiple: false, 
        theme: "white",
        upload_preset: 'uz33u2rx',
        button_caption: "<%= t('manuals.new.manual_form.upload_image_button') %>",
        text: {
          "powered_by_cloudinary": "<%= t('manuals.cloudinary.powered_by_cloudinary') %>",
          "sources.local.title": "<%= t('manuals.cloudinary.sources_local_title') %>",
          "sources.image_search.title": "<%= t('manuals.cloudinary.sources_image_search_title') %>",
          "sources.local.drop_file": "<%= t('manuals.cloudinary.sources_local_drop_file') %>",
          "sources.local.drop_files": "<%= t('manuals.cloudinary.sources_local_drop_files') %>",
          "sources.local.drop_or": "<%= t('manuals.cloudinary.sources_local_drop_or') %>",
          "sources.local.select_file": "<%= t('manuals.cloudinary.sources_local_select_file') %>",
          "sources.local.select_files": "<%= t('manuals.cloudinary.sources_local_select_files') %>",
          "sources.url.title": "<%= t('manuals.cloudinary.sources_url_title') %>",
          "sources.url.note": "<%= t('manuals.cloudinary.sources_url_note') %>",
          "sources.url.upload": "<%= t('manuals.cloudinary.sources_url_upload') %>",
          "sources.url.error": "<%= t('manuals.cloudinary.sources_url_error') %>",
          "sources.camera.title": "<%= t('manuals.cloudinary.sources_camera_title') %>",
          "sources.camera.note": "<%= t('manuals.cloudinary.sources_camera_title') %>",
          "sources.camera.capture": "<%= t('manuals.cloudinary.sources_camera_capture') %>",
          "progress.uploading": "<%= t('manuals.cloudinary.progress_uploading') %>",
          "progress.upload_cropped": "<%= t('manuals.cloudinary.progress_upload_cropped') %>",
          "progress.processing": "<%= t('manuals.cloudinary.progress_processing') %>",
          "progress.retry_upload": "<%= t('manuals.cloudinary.progress_retry_upload') %>",
          "progress.use_succeeded": "<%= t('manuals.cloudinary.progress_use_succeeded') %>",
          "progress.failed_note": "<%= t('manuals.cloudinary.progress_failed_note') %>"
        },
        client_allowed_formats: ['png','jpeg','gif'],
        sources:['local','url','image_search'],
        google_api_key: 'AIzaSyCeDjhqgTdnYul6F_f3ytcsEahEjW7YbB4',
        search_by_sites: ["all", "cloudinary.com"],
        search_by_rights: true },
        function(error, result) { $("#url_image").val(result[0].secure_url)  });
    </script>
  </body>
</html>


