<li class="dropdown pc-menu">
    <a id="language-settings" class="dropdown-toggle" data-toggle="dropdown" href="#">
      <span id="user-name"><%=t('layouts.nav.collapsible_elements.language')%></span>
      <span class="caret"></span>
    </a>
  <ul class="dropdown-menu" role="menu">
    <li class="nav-item<%= "active" if I18n.locale == :ru %>">
      <%= link_to t('layouts.nav.collapsible_elements.russian'), { locale: :ru }, class: "nav-link" %>
   </li>
   <li class="nav-item<%= "active" if I18n.locale == :en %>">
    <%= link_to t('layouts.nav.collapsible_elements.english'), { locale: :en }, class: "nav-link" %>
   </li>
  </ul>
</li>


<li class="dropdown pc-menu">
        <a id="user-settings" class="dropdown-toggle" data-toggle="dropdown" href="#">
          <span id="user-name"><%= current_user.name + " " + current_user.surname %></span>
          <span class="caret"></span>
        </a>

  <ul class="dropdown-menu" role="menu">
    <li><%= link_to t('layouts.nav.collapsible_elements.signed_in_links.profile'), current_user %></li>
    <% if current_user.provider == "" %> 
      <li><%= link_to t('layouts.nav.collapsible_elements.signed_in_links.edit_profile'), edit_user_registration_path %></li>
    <% end %>
    <% if current_user.role == "admin" %> 
      <li><%= link_to t('layouts.nav.collapsible_elements.signed_in_links.admin_panel'), rails_admin_path %></li>
    <% end %>
    <li class="link_nav"><%= link_to t('layouts.nav.collapsible_elements.signed_in_links.log_out'), destroy_user_session_path, method: :delete %></li>
  </ul>
</li>

<li class="dropdown mobile-menu mobile-menu-language">
    <a id="language-settings" class="dropdown-toggle" data-toggle="dropdown" href="#">
      <span id="language-menu"><%=t('layouts.nav.collapsible_elements.language')%></span>
      <span class="caret"></span>
    </a>
  <ul class="dropdown-menu dropdown-language-menu" role="menu">
    <li class="nav-item<%= "active" if I18n.locale == :ru %>">
      <%= link_to t('layouts.nav.collapsible_elements.russian'), { locale: :ru }, class: "nav-link" %>
   </li>
   <li class="nav-item<%= "active" if I18n.locale == :en %>">
    <%= link_to t('layouts.nav.collapsible_elements.english'), { locale: :en }, class: "nav-link" %>
   </li>
  </ul>
</li>
<li class="mobile-menu">
  <%= link_to t('layouts.nav.collapsible_elements.signed_in_links.profile'), current_user %>
</li>

 <% if (current_user.provider == "") %> 
   <li class="mobile-menu">
    <%= link_to t('layouts.nav.collapsible_elements.signed_in_links.edit_profile'), edit_user_registration_path %>
  </li>
<% end %>

<% if (current_user.role == "admin") %> 
   <li class="mobile-menu">
    <%= link_to t('layouts.nav.collapsible_elements.signed_in_links.admin_panel'), rails_admin_path %>
  </li>
<% end %>

<li class="mobile-menu">
  <%= link_to t('layouts.nav.collapsible_elements.signed_in_links.log_out'), destroy_user_session_path, method: :delete %>
