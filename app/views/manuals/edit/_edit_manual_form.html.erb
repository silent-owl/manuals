<%= bootstrap_form_for(@manual) do |f| %>
  <%= f.text_field  :title,  
                    placeholder: 'Title', 
                    class: 'form-control',
                    required: true, 
                    minlength: 5,
                    maxlength: 255 %>
  
  <%= f.text_area :description, 
                  rows: 10,
                  required: true, 
                  minlength: 20,
                  maxlength: 2000,
                  placeholder: 'Describe your manual', 
                  class: 'form-control' %>
  <%= f.hidden_field :img_url, 
                  required: false, 
                  maxlength: 1000,
                  placeholder: 'Please include URL of main image', 
                  class: 'form-control',
                  id: 'url_image' %>
  <%= link_to "Upload multiple image", "#", id: "upload-widget-opener" %>         
  <%= f.collection_select :category_id, @categories, :id, :name, class: 'form-control' %>
  <%= f.submit "Update a manual", class: 'form-control create-manual' %>
<% end %>

