<%= bootstrap_form_for(@step) do |s| %>
  <%= s.text_field  :title,  
                    placeholder: 'Title', 
                    class: 'form-control',
                    required: true, 
                    minlength: 5,
                    maxlength: 255 %>
  
  <%= s.text_area :count, 
                  required: true, 
                  minlength: 1,
                  maxlength: 2000,
                  placeholder: 'Number of step', 
                  class: 'form-control' %>       
  <%= s.submit "Create a step", class: 'form-control create-manual' %>
<% end %>
